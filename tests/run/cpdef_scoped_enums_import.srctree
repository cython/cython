######## import_scoped_enum_test.pyx ########
# distutils: language = c++
# distutils: extra_compile_args = -std=c++11

from cheese import Cheese
from cheese cimport Cheese

cdef Cheese c = Cheese.cheddar
assert list(Cheese) == [1, 2]

