######## fake_grep.py ########

import re
import sys

if sys.platform == 'win32':
    opt, pattern, file = sys.argv[1:]
    assert opt == '-c'
    count = 0
    regex = re.compile(pattern)
    for line in open(file):
        if regex.search(line):
            count += 1
    print(count)
    sys.exit(count == 0)
else:
    import subprocess
    sys.exit(subprocess.call(['grep'] + sys.argv[1:]))
